{
  "manifest_version": 3,
  "name": "Auto Login on Match",
  "version": "1.2.1",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://student.mytcas.com/*",
    "https://*.mytcas.com/*" 
  ],
  "content_scripts": [
    {
      "matches": [
        "https://student.mytcas.com/*",
        "https://*.mytcas.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true         
    }
  ],
  "options_page": "options.html",
  "action": { "default_popup": "popup.html", "default_title": "Auto Login" }
}
