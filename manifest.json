{
  "manifest_version": 3,
  "name": "Auto Login on Match",
  "version": "1.2.1",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://student.mytcas.com/*",
    "https://*.mytcas.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://student.mytcas.com/*",
        "https://*.mytcas.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Login",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}